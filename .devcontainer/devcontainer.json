{
  "name": "democracy-client",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "postCreateCommand": "pnpm install --frozen-lockfile",
  "customizations": {
    "vscode": {
      "tasks": [
        {
          "label": "pnpm: build",
          "type": "shell",
          "command": "pnpm install --frozen-lockfile && pnpm codegen"
        },
        {
          "label": "pnpm: test",
          "type": "shell",
          "command": "pnpm lint && pnpm lint:ts && pnpm test:e2e && pnpm test:e2e:smoke && pnpm test:e2e:verification"
        },
        {
          "label": "pnpm: launch ios",
          "type": "shell",
          "command": "pnpm ios"
        }
      ]
    }
  }
}
